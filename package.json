{
  "name": "techtopia-api",
  "version": "1.0.0",
  "description": "API REST para Techtopia - Catálogo de productos tecnológicos",
  "scripts": {
    "dev": "vercel dev --debug",
    "dev:local": "ts-node-dev --respawn --transpile-only api/health/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"api/**/*.ts\"",
    "seed": "ts-node scripts/seed-database.ts",
    "migrate": "ts-node scripts/migrate-data.ts",
    "test:connection": "ts-node scripts/test-connection.ts",
    "audit": "npm audit",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "mongoose": "^8.8.3",
    "node-cache": "^5.1.2",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.4",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vercel": "^32.0.1"
  },
  "overrides": {
    "@babel/runtime": "^7.26.10",
    "esbuild": "^0.25.9",
    "path-to-regexp": "^8.2.0",
    "semver": "^7.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuPunk16/TechtopiaAPI"
  },
  "keywords": [
    "api",
    "nodejs",
    "typescript",
    "mongodb",
    "vercel",
    "tech-products"
  ],
  "author": "Luis Hernandez/Azotodev",
  "license": "MIT"
}
